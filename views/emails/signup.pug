extends base

block content
	tr
		td(style='padding: 30px 30px 15px 30px;')
			h2(style=`font-size: 18px; color: ${color}; font-weight: 600; margin: 0;`) Confirm Your E-Mail Address
	tr
		td(style='padding: 0 30px 20px')
			p(style='margin-bottom: 10px;') Hi #{name}
			p(style='margin-bottom: 10px;') You are receiving this email because you have registered for #{app}
			p(style='margin-bottom: 10px;') Your account validation code is:
			h2(style=`color:${color};display:inline-block;`) #{code}